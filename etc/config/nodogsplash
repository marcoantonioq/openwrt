# /etc/init.d/nodogsplash restart ;  uci show nodogsplash ; ndsctl clients

config nodogsplash
  option enabled 1
  option fwhook_enabled '1'

  # option gatewayinterface 'br-Publica'
  option gatewayinterface 'br-WIFI'

  option gatewayname 'Net'
  option maxclients '500'

  option preauthidletimeout '30'
  option authidletimeout '120'
  option sessiontimeout '30000'
  option checkinterval '600'

  #option preauth '/usr/lib/nodogsplash/login.sh'
  option binauth '/etc/nodogsplash/nds_auth.sh'

  # Typical ports you will probably want to open up.
  #list authenticated_users 'allow tcp port 22'
  # list authenticated_users 'allow tcp port 53'
  # list authenticated_users 'allow udp port 53'
  # list authenticated_users 'allow tcp port 80'
  # list authenticated_users 'allow tcp port 443'
  # list authenticated_users 'allow tcp port 443'

  ## Whatsapp 
  # list authenticated_users 'allow udp port 45395'
  # list authenticated_users 'allow udp port 3478'
  # list authenticated_users 'allow tcp port 4244'
  # list authenticated_users 'allow tcp port 5222'
  # list authenticated_users 'allow tcp port 5223'
  # list authenticated_users 'allow tcp port 5228'
  # list authenticated_users 'allow tcp port 5242'
  # list authenticated_users 'allow tcp port 59234'
  # list authenticated_users 'allow tcp port 50318'
  # list authenticated_users 'allow udp port 59234'
  # list authenticated_users 'allow udp port 50318'


  # Or for happy customers allow all
  # list authenticated_users 'allow all'

  # Allow ports for SSH/Telnet/DNS/DHCP/HTTP/HTTPS
  list users_to_router 'allow tcp port 53'
  list users_to_router 'allow udp port 53'
  list users_to_router 'allow tcp port 80'
  list users_to_router 'allow tcp port 443'
  list users_to_router 'allow all'

  list preauthenticated_users 'allow udp port 53 to 208.67.222.222'
  list preauthenticated_users 'allow udp port 53 to 208.67.220.220'